<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\StoreGraphQl\Model\Resolver\Store\StoreConfigDataProvider">
        <arguments>
            <argument name="extendedConfigData" xsi:type="array">
                <item name="quickview_enable"
                      xsi:type="string">quick_view/general/enable</item>
                <item name="quick_view_link_text"
                      xsi:type="string">quick_view/general/quick_view_link_text</item>
                <item name="additional_information"
                      xsi:type="string">quick_view/general/additional_information</item>
                <item name="show_related_product_block"
                      xsi:type="string">quick_view/general/show_related_product_block</item>
                <item name="show_upsell_product_block"
                      xsi:type="string">quick_view/general/show_upsell_product_block</item>
                <item name="show_checkout_button"
                      xsi:type="string">quick_view/general/show_checkout_button</item>
                <item name="time_to_close_popup"
                      xsi:type="string">quick_view/general/time_to_close_popup</item>
            </argument>
        </arguments>
    </type>
</config>
